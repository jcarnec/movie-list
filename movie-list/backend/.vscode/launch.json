    "version": "0.2.0",
    "configurations": [
        {
            // attach on port 9230 to express server running in docker container
            "type": "node",
            "request": "attach",
            "name": "Attach to Docker",
            "port": 9230,
            "address": "localhost",
            "localRoot": "${workspaceFolder}",
            "remoteRoot": "/express-server",
            "protocol": "inspector",
            "skipFiles": [
                "<node_internals>/**"
            ]

        }
    ]
}